{
  "manifest_version": 3,
  "name": "Job Tracker",
  "version": "1.0",
  "description": "Extens√£o para acompanhar o status das candidaturas de emprego.",
  "icons": {
    "16": "icons/icon-16.png"
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-16.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
